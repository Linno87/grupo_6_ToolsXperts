<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head", { title: "LOGIN" }) %>

    <body class="login">
        <%- include("./partials/header") %>

            <!-- main -->

            <main class="login_main">

                <div class="login_main_logo_box">

                    <a href="/"><img src="/img/Login/Logo-Toolsxperts_login.png" alt="logo_imagen"></a>


                    <div>
                        <h1>Login</h1>
                        <h4>Sign in to continue</h4>
                        <hr>
                    </div>
                    <div>
                        <p>"Somos una empresa...</p>
                        <button class="boton__general btn_login">Learn More</button>
                    </div>
                </div>
                <div class="login_main_form_box">
                    <h1> Sign in</h1>
                    <form id="formLogin" class="login_main_form" method="POST">
                        <p class="login_main_form_inp_box">
                            <label for="email">EMAIL</label>
                            <input type="email" name="email" id="email" value="<%= locals.old && old.email %>"
                                placeholder="hello@ejemplo.com" />
                            <span id="msgError-email" class="text-danger fw-bold">
                                <%= locals.errors?.email?.msg %>
                            </span>
                        </p>
                        <p class="login_main_form_inp_box">
                            <label for="password">PASSWORD</label>
                            <input type="password" name="password" id="password"
                                value="<%= locals.old && old.password %>" placeholder="Ingresa tu contraseÃ±a" />
                            <span id="msgError-password" class="text-danger fw-bold">
                                <%= locals.errors?.password?.msg %>
                            </span>
                        </p>
                        <label for="remember"><small style="font-size:1rem;">Recordarme!</small> <input type="checkbox"
                                name="remember" id="remember"></label>

                        <div>
                            <input class="boton__general btn_login" type="submit" value="Login" />
                        </div>
                        <span class="text-danger fw-bold text-center" id="msgError-empty"
                            class="text-danger fw-bold"></span>

                    </form>
                    <div class="login_main_redes">
                        <a href="https://www.instagram.com/"><i class="fab fa-instagram-square"></i></a>
                        <a href="https://www.facebook.com/"><i class="fab fa-facebook"
                                style="color:var(--AzulClaro)"></i></a>
                        <a href="https://myaccount.google.com"><i class="fab fa-google-plus-square"></i></a>
                    </div>
                </div>
            </main>
            <script src="/javascripts/validationLogin.js"></script>
            <!-- footer -->

            <%- include("./partials/footer") %>
    </body>

</html>