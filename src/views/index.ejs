        <!-- NUESTROS RUBROS -->

        <div class="home__main__div--nuestros-rubros">
            <h1>Nuestros Rubros</h1>

            <!-- CARRUSEL DE RUBROS -->
            <section class="section--rubros">
                <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff"
                    class="swiper mySwiper2-rubros">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide swiper-slide-img-rubros">
                            <img src="/img/rubros/Common Uses for Welding.jpg" alt="rubro1">
                        </div>
                        <div class="swiper-slide swiper-slide-img-rubros">
                            <img src="/img/rubros/istockphoto-538026470-1024x1024-transformed.jpeg" alt="rubro2">
                        </div>
                        <div class="swiper-slide swiper-slide-img-rubros">
                            <img src="/img/rubros/istockphoto-1218386420-1024x1024-transformed (1).jpeg" alt="rubro3">
                        </div>
                        <div class="swiper-slide swiper-slide-img-rubros">
                            <img src="https://swiperjs.com/demos/images/nature-4.jpg" />
                        </div>
                    </div>
                    <div class="swiper-button-next-rubros"></div>
                    <div class="swiper-button-prev-rubros"></div>
                </div>
                <div class="swiper mySwiper-rubros">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide swiper-slide-img-rubros2">
                            <img src="/img/rubros/Common Uses for Welding.jpg" class="d-block" alt="rubro1">
