<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head",{ title: "REGISTER" }) %>

    <body class="register">
        <%- include("./partials/header") %>

            <main class="register_main">

                <div class="register_main_logo_box">

                    <a href="/"><img src="/img/Login/Logo-Toolsxperts_login.png" alt="logo_imagen"></a>


                    <div>
                        <h1>Registrate</h1>
                        <h4>Sign in to continue</h4>
                        <hr>
                    </div>
                    <div>
                        <p>"Somos una empresa...</p>
                        <button class="boton__general btn_register">Learn More</button>
                    </div>
                </div>
                <div class="register_main_form_box">
                    <h1>Registrate</h1>
                    <form class="register_main_form" action="" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                        <div class="register_main_form_div">
                            <p class="register_main_form_inp_box">
                                <label for="firstName">Nombre</label>
                                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= locals.old && (old.firstName && old.firstName)%>"
                                    placeholder="Nombre">
                                <span class="text-danger fw-bold">
                                    <%=locals.errors?.firstName?.msg%>
                                </span>
                            </p>
                            <p class="register_main_form_inp_box">
                                <label for="lastName">Apellido</label>
                                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= locals.old && (old.lastName && old.lastName)  %>"
                                    placeholder="Apellido">
                                <span class="text-danger fw-bold">
                                    <%=locals.errors?.lastName?.msg%>
                                </span>
                            </p>
                        </div>
                        <p class="register_main_form_inp_box">
                            <label for="email">Correo electrónico</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="hello@ejemplo.com">
                            <span class="text-danger fw-bold">
                                <%=locals.errors?.email?.msg%>
                            </span>
                        </p>
                        <div class="register_main_form_div">
                            <p class="register_main_form_inp_box">
                                <label for="password">Contraseña</label>
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Ingresa tu contraseña">
                                <span class="text-danger fw-bold">
                                    <%=locals.errors?.password?.msg%>
                                </span>
                            </p>
                            <p class="register_main_form_inp_box">
                                <label for="password_confirmation">Confirmar contraseña</label>
                                <input type="password" class="form-control" id="password_confirmation"
                                    name="password_confirmation" placeholder="Confirma tu contraseña">
                                <span class="text-danger fw-bold">
                                    <%=locals.errors?.password_confirmation?.msg%>
                                </span>
                            </p>
                        </div>
                        <div class="register_main_form_div">
                            <p class="register_main_form_inp_box">
                                <label for="date">FECHA DE NACIMIENTO</label>
                                <input type="date" name="date" id="date" value="<%= locals.old && (old.date && old.date) %>">
                                <span class="text-danger fw-bold">
                                    <%=locals.errors?.date?.msg%>
                                </span>
                            </p>
                            <p class="register_main_form_inp_box">
                                <label for="categoryUser">Rubro Favorito</label>
                                <select name="categoryUser" id="categoryUser">
                                    <option value="todos" <%= locals.old && (old.categoryUser==='todos' && 'selected') %>>Todos</option>
                                    <option value="carpinteria" <%= locals.old && (old.categoryUser==='carpinteria' && 'selected') %>>Carpinteria</option>
                                    <option value="soldadura" <%= locals.old && (old.categoryUser==='soldadura' && 'selected') %>>Soldadura</option>
                                    <option value="metalurgica"<%= locals.old && (old.categoryUser==='metalurgica' && 'selected') %>>Metalurgica</option>
                                    <span class="text-danger fw-bold">
                                        <%=locals.errors?.categoryUser?.msg%>
                                    </span>
                                </select>
                            </p>
                        </div>
                        <div>
                            <input class="boton__general btn_register" type="submit" value="REGISTRATE" />
                        </div>
                    </form>
                    <div class="register_main_redes">
                        <a href="https://www.instagram.com/"><i class="fab fa-instagram-square"></i></a>
                        <a href="https://www.facebook.com/"><i class="fab fa-facebook"
                                style="color:var(--AzulClaro)"></i></a>
                        <a href="https://myaccount.google.com"><i class="fab fa-google-plus-square"></i></a>
                    </div>
                </div>
            </main>
            <%- include("./partials/footer") %>
    </body>