<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head",{ title: "USUARIOS" }) %>
</head>

<body>
    <%- include("./partials/header") %>

        <main>
            <h1>Usuarios</h1>
            <hr>
            <ul>
                <% listUser.forEach( user=> { %>
                    <h4>
                        <%= user.firstName %>
                            <%= user.lastName %>
                    </h4>
                    <p>ID: <%= user.id %>
                    </p>
                    <p>Categor√≠a: <%= user.categoryUser %>
                    </p>
                    <p>Email: <%= user.email %>
                    </p>
                    <img src="/img/users/<%= user.profile_image %>"
                        alt="<%= user.firstName %> <%= user.lastName %>" width="200">
                    <% }); %>
            </ul>

        </main>

        <%- include("./partials/footer") %>
</body>

</html>