<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head", { title: "Productos"}) %>

<body>
    <%- include("./partials/header") %>
    <main class="main_create">
        <div class="main_create_cont">
            <div class="main_create_cont_container_form" >
                <form class="clase_formularios"  method="POST" enctype="multipart/form-data">
                    <div class="main__titulo-h1">
                       <h1>Crear producto</h1>
                       <hr>
                    </div>
                    
                    <div class="clase_formularios_cajas">
                        <label for="name">Nombre:</label>
                        <input type="text" id="name" minlength="3" maxlength="20" name="name" required/>
                    </div>
                    <div class="clase_formularios_cajas">
                        <label for="category">Categoría:</label>
                        <select name="category"> 
                        <option value="amoladoras">Amoladora</option>
                        <option value="caladoras" >Caladora</option>
                        <option value="lijadoras">Lijadora</option>
                        <option value="pintor">Pintor</option>
                        <option value="sierras_circulares">Sierra circular</option>
                        <option value="taladros">Taladro</option>
                        <option value="tornillos">Tornillo</option>
                        <option value="varios">Varios</option>
                      </select>
                    </div>
                    
                    <div class="clase_formularios_cajas">
                        <label for="marca">Marca:</label>
                        <input type="text" id="marca" minlength="3" maxlength="20" name="brand" required/>
                    </div>
                    <div class="clase_formularios_cajas">
                        <label for="modelo">Modelo:</label>
                        <input type="text" id="modelo" minlength="3" maxlength="20" name="model" required/>
                    </div>
                    <div class="clase_formularios_cajas">
                        <label for="precio">Precio ($):</label>
                        <input type="number" id="precio"  name="price" required/>
                    </div>
                    <div class="clase_formularios_cajas">
                        <label for="oferta">Oferta (%): </label>
                        <input type="number" id="oferta" name="discount" required/>
                    </div>

                    <div class="clase_formularios_cajas tex_area">
                        <textarea class="form_product_text_area" maxlength="256" rows="5" cols="20" name="description" placeholder="Escribe una descripción..."></textarea>
                    </div>
                    <div class="clase_formulario_botones">

                    
                    <div class="clase_formularios_cajas_btn_agregar">
                        <label class="boton__general btn_img" for="image"><i class="fa-solid fa-plus fa-2xl"></i>Agregar Imagen</label>
                        <input hidden type="file" id="image" name="image" accept="jpg" />
                            
                    </div>
                    <div class="clase_formulario_box_btn">
                        <input class="boton__general btn_form" type="reset" value="Cancelar" />
                        <input class="boton__general btn_form" type="submit" value="Crear" />
                    </div>
                    </div>
                </form>
              
            </div>
        </div>

    </main>
    <%- include("./partials/footer") %>
</body>
</html>