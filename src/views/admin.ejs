<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head", { title: "Admin" }) %>

    <body class="admin">

        <%- include("./partials/header") %>

            <div class="advertencia">

                <i class="fa-solid fa-triangle-exclamation" style="color: #e63946;"></i>
                <h3>Para configuacion de administradores solo esta disponible en Computadoras o Tablets</h3>

            </div>
            <main class="main-admin">
                <div class="row mt-3 main-admin-list">
                    <div class="col-12 col-md-12 mx-auto">
                        <div class="card main-admin-container">
                            <div class="card-header main-admin-header">
                                <h3 class="card-title">Productos</h3>
                            </div>
                            <div class="card-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                                            aria-selected="true">Productos</button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-profile" type="button" role="tab"
                                            aria-controls="nav-profile" aria-selected="false">Marcas</button>
                                        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-contact" type="button" role="tab"
                                            aria-controls="nav-contact" aria-selected="false">Rubros</button>
                                        <button class="nav-link" id="nav-Inactivos-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-Inactivos" type="button" role="tab"
                                            aria-controls="nav-Inactivos" aria-selected="false"
                                            Inactivos>Inactivos</button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                        aria-labelledby="nav-home-tab" tabindex="0">
                                        <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                                            <div class="admin_filter">
                                                <a href="/products/createProduct"><button><i
                                                            class="fa-solid fa-plus fa-2xl"></i>Agregar</button></a>
                                            </div>
                                            <form action="/admin/search" class="d-flex flex-column flex-md-row gap-2"
                                                method="GET">
                                                <select class="form-select" name="brand">
                                                    <option selected hidden value="">Filtrar por marca</option>
                                                    <option value="barovo">Barovo</option>
                                                    <option value="Black&Decker">Black&Decker</option>
                                                    <option value="Bosch">Bosch</option>
                                                    <option value="Dremel">Dremel</option>
                                                    <option value="Ford">Ford Tools</option>
                                                    <option value="Volt">Volt</option>
                                                    <option value="Makita">Makita</option>
                                                    <option value="Bremel">Bremel</option>
                                                </select>
                                                <input type="text" class="form-control" placeholder="Buscar..."
                                                    name="keywords">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-search"></i>
                                                </button>

                                            </form>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Categoria</th>
                                                        <th scope="col">Marca</th>
                                                        <th scope="col">Precio</th>
                                                        <th scope="col">Descuento</th>
                                                        <th scope="col">Pecio Final</th>
                                                        <th scope="col">Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% products.forEach(({id, name, brand, price, discount, category, description},index)=> { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1%>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            
                                                            <td>
                                                                <%= category.name %>
                                                            </td>
                                                            <td>
                                                                <%= brand ? brand.name : "Sin especificar" %>
                                                            </td>
                                                            <td>
                                                                <%= price + ' $' %>
                                                            </td>
                                                            <td>
                                                                <%= discount + ' %' %>
                                                            </td>
                                                            <td>
                                                                <%= price - (discount * price / 100) + ' $' %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <a href="/products/detalle/<%= id %>"><button
                                                                            type="button"
                                                                            class="btn btn-sm  btn-primary">
                                                                            <i class="fas fa-eye"></i>
                                                                        </button>
                                                                        <a href="/products/editProduct/<%= id %>"
                                                                            class="btn btn-sm btn-success">
                                                                            <i class="fas fa-edit"></i>
                                                                        </a>

                                                                        <button type="button"
                                                                            class="btn btn-sm btn-danger"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#modalDelete<%=id%>">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>

                                                                        <div class="modal fade" id="modalDelete<%=id%>"
                                                                            tabindex="-1">
                                                                            <div class="modal-dialog">
                                                                                <div class="modal-content">
                                                                                    <div class="main-admin-header">
                                                                                        <div
                                                                                            class="modal-header main-admin-header">
                                                                                            <h5 class="modal-title modal-advertencia">
                                                                                                Advertencia</h5>
                                                                                            <button type="button"
                                                                                                class="btn-close"
                                                                                                data-bs-dismiss="modal"
                                                                                                aria-label="Close"></button>
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="modal-body modal-body-background">
                                                                                        <p>Vas a eliminar el producto
                                                                                            <b><%- name %>,</b> ¿Estas
                                                                                            seguro?.
                                                                                        </p>
                                                                                    </div>
                                                                                    <div class="main-admin-header">
                                                                                        <div
                                                                                        class="modal-footer main-admin-header">
                                                                                        <button type="button"
                                                                                            class="btn btn-primary"
                                                                                            data-bs-dismiss="modal">Cancelar</button>
                                                                                        <form
                                                                                            action="/products/deleteProduct/<%=id%>?_method=DELETE"
                                                                                            method="POST">
                                                                                            <button type="submit"
                                                                                                class="btn btn-danger">Eliminar
                                                                                            </button>
                                                                                        </form>
                                                                                    </div>
                                                                                        </div>
                                                                                    
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                        aria-labelledby="nav-profile-tab" tabindex="0">
                                        Todas las marcas
                                    </div>
                                    <div class="tab-pane fade" id="nav-contact" role="tabpanel"
                                        aria-labelledby="nav-contact-tab" tabindex="0">
                                        Todos los Rubros
                                    </div>
                                    <div class="tab-pane fade" id="nav-Inactivos" role="tabpanel"
                                        aria-labelledby="nav-contact-tab" tabindex="0">
                                        Productos Inactivos
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <%- include("./partials/footer") %>
    </body>

</html>