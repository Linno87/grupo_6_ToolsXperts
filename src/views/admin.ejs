<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head", { title: "Admin" }) %>

    <body class="admin">

        <%- include("./partials/header") %>

            <div class="advertencia">

                <i class="fa-solid fa-triangle-exclamation" style="color: #e63946;"></i>
                <h3>Para configuacion de administradores solo esta disponible en Computadoras o Tablets</h3>

            </div>
            <main class="main-admin">
                <div class="row mt-3 main-admin-list">
                    <div class="col-12 col-md-12 mx-auto">
                        <div class="card main-admin-container">
                            <div class="card-header main-admin-header">
                                <h3 class="card-title">Productos</h3>
                            </div>
                            <div class="card-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                                            aria-selected="true">Productos</button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                            data-bs-target="#nav-profile" type="button" role="tab"
                                            aria-controls="nav-profile" aria-selected="false">Marcas</button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="col-12">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                        aria-labelledby="nav-home-tab" tabindex="0">
                                        <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                                            <div class="admin_filter">
                                                <a href="/products/createProduct"><button><i
                                                            class="fa-solid fa-plus fa-2xl"></i>Agregar</button></a>
                                            </div>
                                            <form id="formAdminSearch" action="/admin/search" class="d-flex flex-column flex-md-row gap-2"
                                                method="GET">
                                                <select class="form-select" name="brand">
                                                    <option selected hidden value="">Filtrar por marca</option>
                                                    <% brands.forEach(brand => { %>
                                                        <option value="<%= brand.id %>"><%= brand.name %></option>
                                                    <% }) %>
                                                    
                                                </select>
                                                <input type="text" class="form-control" placeholder="Buscar..."
                                                    name="keywords" id="adminSearch">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </form>
                                            </div>
                                            <small id="msg-AdminSearch" class="text-danger d-flex justify-content-end"></small>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Categoria</th>
                                                        <th scope="col">Marca</th>
                                                        <th scope="col">Precio</th>
                                                        <th scope="col">Descuento</th>
                                                        <th scope="col">Pecio Final</th>
                                                        <th scope="col">Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (!products.length) { %>
                                                        <td class="table-danger" colspan="8">
                                                            <h5 class="text-align-center">Producto no encontrado</h5>
                                                        </td>
                                                        
                                                    <% } %>
                                                    <% products.forEach(({id, name, brand, price, discount, category, description,images,image},index)=> { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1%>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            
                                                            <td>
                                                                <%= category.name %>
                                                            </td>
                                                            <td>
                                                                <%= brand ? brand.name : "Sin especificar" %>
                                                            </td>
                                                            <td>
                                                                <%= ' $'+ price %>
                                                            </td>
                                                            <td>
                                                                <%= discount + ' %' %>
                                                            </td>
                                                            <td>
                                                                <%=  ' $' + (price - (discount * price / 100)) %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                        <button type="button"
                                                                        class="btn btn-sm  btn-primary"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#modalDetail<%= id %>">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>

                                                                    <%- include('partials/modalDetailProduct',{
                                                                        id, name, brand, price, discount, category, description,image,images
                                                                        })%>
                                                                        
                                                                        <a href="/products/editProduct/<%= id %>"
                                                                            class="btn btn-sm btn-success">
                                                                            <i class="fas fa-edit"></i>
                                                                        </a>

                                                                        <button type="button"
                                                                            class="btn btn-sm btn-danger"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#modalDelete<%=id%>">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                        <%- include('partials/modalDeleteProduct',{id,name}) %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="col-12">
                                    <div class="tab-pane fade show active" id="nav-profile" role="tabpanel"
                                        aria-labelledby="nav-profile-tab" tabindex="0">
                                        <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                                            <div class="admin_filter">
                                                <a href="/brands/createBrand"><button><i
                                                            class="fa-solid fa-plus fa-2xl"></i>Agregar</button></a>
                                            </div>
                                            </div>
                                            <small id="msg-AdminSearch" class="text-danger d-flex justify-content-end"></small>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (!brands.length) { %>
                                                        <td class="table-danger" colspan="8">
                                                            <h5 class="text-align-center">Marca no encontrada</h5>
                                                        </td>
                                                        
                                                    <% } %>
                                                    <% brands.forEach(({id, name,images,image},index)=> { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1%>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                        <button type="button"
                                                                        class="btn btn-sm  btn-primary"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#modalDetailBrand<%= id %>">
                                                                        <i class="fas fa-eye"></i>
                                                                    </button>

                                                                    <%- include('partials/modalDetailBrand',{
                                                                        id, name,image,images
                                                                        })%>
                                                                        
                                                                        <a href="/brands/editBrand/<%= id %>"
                                                                            class="btn btn-sm btn-success">
                                                                            <i class="fas fa-edit"></i>
                                                                        </a>

                                                                        <button type="button"
                                                                            class="btn btn-sm btn-danger"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#modalDeleteBrand<%=id%>">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                        <%- include('partials/modalDeleteBrand',{id,name}) %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <script src="/javascripts/searchAdmin.js"></script>
            <%- include("./partials/footer") %>
            
    </body>

</html>